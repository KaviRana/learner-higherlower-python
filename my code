import random 
from replit import clear
from game_data import data
from art import logo,vs
game_on = True
a = random.randint(1,50)
b = random.randint(1,50)
score = 0
A = data[a]
B = data[b]
print("Welcome to my higher and lower game.")
while game_on == True:

    print(f" A : {data[a]['name']} has {data[a]['follower_count']} who is {data[a]['description']} from {data[a]['country']} ")
    print(f" B : {data[b]['name']} has {data[b]['follower_count']} who is {data[b]['description']} from {data[b]['country']} ")
    
    correct = ''
    af = data[a]['follower_count']
    bf = data[b]['follower_count']
    if af > bf:
        correct == A
    elif af == bf :
        print("They have same. you have a bug")
        
    else:
        correct == B
        
   
    answer = input("Who do you think has more followers. Enter A or B as your answer. ")
    
    if answer == correct:
        score += 1
        print("Right answer")
        print(f"Your score is {score}")
    else:
        game_on = False
        print(f"Sorry wrong answer. Your final score is {score}")
        
    
